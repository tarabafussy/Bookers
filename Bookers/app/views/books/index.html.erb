<h1>Books</h1>
<table class="book-list">
	<tr>
		<th class="list-title">Title</th>
		<th class="list-title">Body</th>
		<th class="list-title"></th>
		<th class="list-title"></th>
		<th class="list-title"></th>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<th class="list-text"><%= book.title %></th>
			<th class="list-text"><%= book.body %></th>
			<th class="list-text"><%= link_to "Show", book_path(book) %></th>
			<th class="list-text"><%= link_to "Edit", edit_book_path(book) %></th>
			<th class="list-text"><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
		</tr>
	<% end %>
</table>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<div>
	<h4>Title</h4>
	<%= f.text_field :title %>
	</div>
	<div>
	<h4>Body</h4>
	<%= f.text_area :body %>
	</div>
	<%= f.submit "Create Book" %>
<% end %>
