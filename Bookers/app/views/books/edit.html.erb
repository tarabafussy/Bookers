<h1 class="edit-title">Editing Book</h1>
<%= form_for(@book) do |f| %>
	<div class="edit-box">
		<h4>Title</h4>
		<%= f.text_field :title %>
	</div>
	<div class="edit-box">
		<h4>Body</h4>
		<%= f.text_field :body %>
	</div>
	<%= f.submit 'Update Book' %>
<% end %>
<div class="edit-link">
<%= link_to "Show", book_path(@book) %>
<a href="/books">Back</a>
</div>